#!/bin/sh
revert() {
    i3-msg -q bar mode hide &
    dunstify DUNST_COMMAND_RESUME &
    numlockx &
    xset dpms 0
}
trap revert HUP INT TERM

(( `pgrep -o ${0##*/} | head -n1` != $$ )) && exit

{
    dunstify DUNST_COMMAND_PAUSE
    xset dpms 20
    numlockx off
    i3-msg -q bar mode invisible
} &

i3lock -mnueB=

revert
